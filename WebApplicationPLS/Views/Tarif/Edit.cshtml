@model WebApplicationPLS.Models.Model.Tarif
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('ckeditor1')
</script>

<h2>Tarif Düzenle</h2>

<div class="form">
    @*<form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Blog/Create" enctype="multipart/form-data">*@
    @using (Html.BeginForm("Edit", "Tarif", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken();
        <div class="form-group">
            <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Baslik" name="Baslik" minlength="5" type="text" required value="@Model.Baslik" />
            </div>
        </div>

        <div class="form-group">
            <label for="cemail" class="control-label col-lg-2">Liste <span class="required">*</span></label>
            <div class="col-lg-10">
                @Html.DropDownList("ListeID", null, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label for="cemail" class="control-label col-lg-2">İçerik <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea class="ckeditor" name="Icerik">@Model.Icerik</textarea>
            </div>
        </div>

        <div class="form-group">
            <label for="curl" class="control-label col-lg-2">Önceki Resim</label>
            <div class="col-lg-10">
                <img src="@Model.ResimURL" width="150" height="150" />
            </div>
        </div>

        <div class="form-group">
            <label for="curl" class="control-label col-lg-2">Resim</label>
            <div class="col-lg-10">
                <input type="file" class="form-control" name="ResimURL" accept=".jpg,.png,.jpeg" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Güncelle</button>
                <button class="btn" type="button"><a href="/Tarif/Index">İptal</a></button>
            </div>
        </div>
    }


    @*</form>*@
</div>

