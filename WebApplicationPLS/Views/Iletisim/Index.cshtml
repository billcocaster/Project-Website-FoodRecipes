@model IEnumerable<WebApplicationPLS.Models.Model.Iletisim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>İletişim</h2>


<table class="table table-bordered">
    <tr class="table-primary">
        <th>
            @Html.DisplayNameFor(model => model.Adres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Instagram)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>İşlemler</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Adres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Instagram)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <a href="/Iletisim/Edit/@item.IletisimID" class="btn btn-primary">Güncelle</a>
            <a href="/Iletisim/Delete/@item.IletisimID" class="btn btn-danger">Sil</a>
            <a href="/Iletisim/Details/@item.IletisimID" class="btn btn-warning">Detaylar</a>
        </td>
    </tr>
}

</table>
