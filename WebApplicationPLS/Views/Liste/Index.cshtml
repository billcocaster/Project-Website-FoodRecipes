@model IEnumerable<WebApplicationPLS.Models.Model.Liste>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Listeler</h2>

<p>
    @Html.ActionLink("Yeni oluştur", "Create")
</p>
<table class="table datatable">
    <thead>
        <tr class="table table-primary">
            <th>
                @Html.DisplayNameFor(model => model.ListeAd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aciklama)
            </th>
            <th>
                Resim
            </th>
            <th>
                İşlemler
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ListeAd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Aciklama)
                </td>
                <td><img src="@item.ResimURL" width="50" height="50" /></td>
                <td>
                    <a href="/yonetimpaneli/liste/duzenle/@item.ListeID" class="btn btn-primary">Güncelle</a>
                    <a href="/yonetimpaneli/liste/sil/@item.ListeID" class="btn btn-danger">Sil</a>
                    <a href="/yonetimpaneli/liste/detaylar/@item.ListeID" class="btn btn-warning">Detaylar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
