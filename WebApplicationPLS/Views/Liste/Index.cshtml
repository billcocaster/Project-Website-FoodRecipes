@model IEnumerable<WebApplicationPLS.Models.Model.Liste>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
<link href="~/Content/DataTables/css/jquery.dataTables.css" rel="stylesheet" />
<script src="~/Scripts/DataTables/dataTables.bootstrap4.js"></script>
<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />


<script>
    $(document).ready(function () {
        $('#myTable').DataTable(
            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/2.1.8/i18n/tr.json"
                }
            });
    });
</script>

<h2>Listeler</h2>

<p>
    @Html.ActionLink("Yeni oluştur", "Create")
</p>
<table class="table table-bordered" id="myTable">
    <thead>
        <tr class="table table-primary">
            <th>
                @Html.DisplayNameFor(model => model.ListeAd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aciklama)
            </th>
            <th>
                Resim
            </th>
            <th>
                İşlemler
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ListeAd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Aciklama)
                </td>
                <td><img src="@item.ResimURL" width="50" height="50" /></td>
                <td>
                    <a href="/yonetimpaneli/liste/duzenle/@item.ListeID" class="btn btn-primary">Güncelle</a>
                    <a href="/yonetimpaneli/liste/sil/@item.ListeID" class="btn btn-danger">Sil</a>
                    <a href="/yonetimpaneli/liste/detaylar/@item.ListeID" class="btn btn-warning">Detaylar</a>
                </td>
            </tr>
        }
    </tbody>

    

</table>
