@model IEnumerable<WebApplicationPLS.Models.Model.Liste>
@using WebApplicationPLS.Helper;
<!-- Categories Widget -->
<div class="categories-widget widget-item">

    <h3 class="widget-title">Listeler</h3>
    <ul class="mt-3">
        <li>
            <a href="/Tarif/">Tümü</a>
        </li>
        @foreach (var item in Model)
        {
            <li>
                <a href="/Tarif/@SeoHelper.ToSeoUrl(item.ListeAd).ToLower()/@item.ListeID">@item.ListeAd<span>(@item.Tarifs.Count())</span></a>
            </li>
        }

    </ul>

</div><!--/Categories Widget -->