@model IEnumerable<WebApplicationPLS.Models.Model.Tarif>
@using WebApplicationPLS.Helper;
@foreach (var item in Model)
{
    <div class="post-item">
        <img src="@item.ResimURL" alt="@item.Baslik" class="flex-shrink-0">
        <div>
            <h4><a href="/Tarif/@SeoHelper.ToSeoUrl(item.Baslik).ToLower()-@item.TarifID">@item.Baslik</a></h4>
            <time datetime="@item.YuklenmeTarihi.ToString("yyyy-MM-dd")">@item.YuklenmeTarihi.ToString("dd MMM, yyyy")</time>
        </div>
    </div><!-- End recent post item-->

}

