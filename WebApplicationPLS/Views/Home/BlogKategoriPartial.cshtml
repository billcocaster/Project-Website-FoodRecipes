@model IEnumerable<WebApplicationPLS.Models.Model.Kategori>
@using WebApplicationPLS.Helper;
<!-- Categories Widget -->
<div class="categories-widget widget-item">

    <h3 class="widget-title">Kategoriler</h3>
    <ul class="mt-3">
        <li>
            <a href="/Blog/">Tümü</a>
        </li>
        @foreach (var item in Model)
        {
            <li>
                <a href="/Blog/@SeoHelper.ToSeoUrl(item.KategoriAd).ToLower()/@item.KategoriID">@item.KategoriAd<span>(@item.Blogs.Count())</span></a>
            </li>
        }
       
    </ul>

</div><!--/Categories Widget -->