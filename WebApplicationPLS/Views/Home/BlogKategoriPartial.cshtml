@model IEnumerable<WebApplicationPLS.Models.Model.Kategori>
<!-- Categories Widget -->
<div class="categories-widget widget-item">

    <h3 class="widget-title">Categories</h3>
    <ul class="mt-3">
        @foreach (var item in Model)
        {
            <li>
                <a href="/Home/KategoriBlog/@item.KategoriID">@item.KategoriAd<span>(@item.Blogs.Count())</span></a>
            </li>
        }
       
    </ul>

</div><!--/Categories Widget -->