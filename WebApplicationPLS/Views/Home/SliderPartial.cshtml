@using WebApplicationPLS.Helper;
@{
    Layout = null;
}
<!-- Hero Section -->
<section id="hero" class="hero section dark-background">

        <img src="~/Content/imgs/slider1.jpg" alt="">

    <div id="hero-carousel" class="carousel carousel-fade" data-bs-ride="carousel" data-bs-interval="3000">

        <div class="container position-relative">

            <div class="carousel-item active">
                <div class="carousel-container">
                    <h2 style="color:#000000">Hoşgeldiniz</h2>
                </div>
            </div><!-- End Carousel Item -->

            @foreach (var tarif in ViewBag.EnCokTiklananTarifler)
            {
                <div class="carousel-item">
                    <div class="carousel-container">
                        <h2 style="color:#000000;">@tarif.Baslik</h2>
                        <a href="/Tarif/@SeoHelper.ToSeoUrl(tarif.Baslik).ToLower()-@tarif.TarifID" class="btn-get-started" style="color:#000000">Detaylar</a>
                    </div>
                </div><!-- End Carousel Item -->
            }


            <a class="carousel-control-prev" href="#hero-carousel" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bi bi-chevron-left" aria-hidden="true"></span>
            </a>

            <a class="carousel-control-next" href="#hero-carousel" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon bi bi-chevron-right" aria-hidden="true"></span>
            </a>
        </div>

    </div>

</section><!-- /Hero Section -->